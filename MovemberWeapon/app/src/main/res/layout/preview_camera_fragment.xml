<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back_ground">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu_tab"
        android:orientation="vertical">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/man_image"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/man_head" />

    <ImageView
        android:id="@+id/capture_demo_screen"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_below="@+id/man_image"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="fitStart"
        android:src="@drawable/white_box" />

    <ImageView
        android:id="@+id/retake_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/capture_demo_screen"
        android:layout_marginEnd="@dimen/retake_button_end_margin_size"
        android:layout_marginRight="@dimen/retake_button_right_margin_size"
        android:layout_toLeftOf="@+id/proceed_id"
        android:layout_toStartOf="@+id/proceed_id"
        android:scaleType="fitStart"
        android:src="@drawable/retake_button" />

    <ImageView
        android:id="@+id/proceed_id"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_below="@+id/capture_demo_screen"
        android:layout_marginEnd="@dimen/proceed_button_end_margin_size"
        android:layout_marginRight="@dimen/proceed_button_right_margin_size"
        android:scaleType="fitStart"
        android:src="@drawable/proceed_button" />


</RelativeLayout>
