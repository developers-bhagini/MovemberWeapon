<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_back_ground">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu_tab"
        android:orientation="vertical">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:background="@android:color/transparent" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/man_image"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/man_head" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    </RelativeLayout>

    <ImageView
        android:id="@+id/white_box"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:scaleType="fitStart"
        android:layout_below="@+id/man_image"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/white_box" />

    <ImageView
        android:id="@+id/fb_share"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fb_share_image" />
</RelativeLayout>
